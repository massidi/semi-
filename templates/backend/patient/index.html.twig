{% extends 'admin.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block contenu %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Age</th>
                <th>Weigth</th>
                <th>Address</th>
                <th>Mobile</th>
                <th>Image</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.type }}</td>
                <td>{{ patient.age }}</td>
                <td>{{ patient.weigth }}</td>
                <td>{{ patient.address }}</td>
                <td>{{ patient.mobile }}</td>
                <td>{{ patient.image }}</td>
                <td>{{ patient.updatedAt ? patient.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('patient_new') }}">Create new</a>
{% endblock %}
