
<div class="form-group row">
    <div class="col-md-6">
        {{ dump(form) }}
        {{ form_start() }}
        <div class="form-group row">

            <div class="col-md-5 offset-1">
                {{ form_widget(form.type) }}
            </div>
            <div class="col-md-5 offset-1">
                {{ form_widget(form.department) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5 offset-1">
                {{ form_widget(form.specialization) }}
            </div>
        </div>
    </div>
    <div class="col-md 6">
        <div class="form-group row">
            <div class="col-md-5 offset-1">
                {{ form_widget(form.hospital_name) }}
            </div>
            <div class="col-md-5 offset-1">
                {{ form_widget(form.mobile) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5 offset-1">
                {{ form_widget(form.image) }}
            </div>
            <div class="col-md-5 offset-1">
                {{ form_widget(form.doctorUser) }}
            </div>
        </div>
    </div>

    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>