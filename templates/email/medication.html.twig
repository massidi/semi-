                                </thead>
                                <tbody>
                                <tr>
                                    <td>{{ medication.diagnostic }}</td>

                                </tr>
                                <tr>
                                    <td>{{ medication.examination }}</td>

                                </tr>
                                <tr>
                                    <td>{{ medication.bloodPressure }}</td>

                                </tr>
                                <tr>
                                    <td>{{ medication.drug }}</td>

                                </tr>
                                <tr>
                                    <td>{{ medication.dosage }}</td>

                                </tr>
                                <tr>

                                    <td>{{ medication.pulseRate }}</td>

                                </tr>
                                <tr>

