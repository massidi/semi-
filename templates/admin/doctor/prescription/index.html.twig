{% block title %}{{  parent() }}TABLE OF PRESCRIPTION{% endblock %}


{% block contenu %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Basic Datatable</h5>
                        <div class="table-responsive">
                            <table id="zero_config" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>PATIENT NAME</th>
                                    <th>CONTACT</th>
                                    <th>Age</th>
                                    <th>DATE</th>
                                    <th>ACTION</th>
                                    <th>DELETE</th>


                                </tr>
                                </thead>
                                <tbody>
                                {% for prescriptions in prescriptions %}
                                    <tr>
                                        <td>{{prescriptions.id}}</td>
                                        <td>{{prescriptions.patientName}}</td>
                                        <td>{{prescriptions.diagnostic}}</td>
                                        <td>{{prescriptions.age}}</td>
                                        <td>{{prescriptions.createdAt |date }}
                                        <td>
                                            <a href="{{ path('doctor_edit', {'id': prescriptions.id}) }}" class="btn btn-primary " style="color: #1c7430" >Edit

                                            </a>
                                            <a href="{{ path('show_doctor',{'id': prescriptions.id}) }}" ><span class="btn btn-warning">show</span></a>
                                            <a href="{{ path('print_prescription',{'id': prescriptions.id}) }}">
                                                <button class="btn btn-success" type="submit">print </button>
                                            </a>

                                        </td>
                                        <td>
                                            {{ include('admin/doctor/prescription/_delete_form.html.twig') }}
                                        </td>
                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>PATIENT NAME</th>
                                    <th>CONTACT</th>
                                    <th>Age</th>
                                    <th>DATE</th>
                                    <th>ACTION</th>
                                    <th>DELETE</th>



                                </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
