{% extends 'admin.html.twig' %}

{% block title %}MedicPrescription{% endblock %}

{% block contenu %}
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- =================R============================================= -->
        {% if prescription != null %}
        <div class="row">
            <div class="col-md-12">
                <div class="card card-body printableArea">
                    <h3><b>PRESCRIPTION ID:</b> <span class="pull-right">{{ prescription.id }}</span></h3>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-left">
                                <address>
                                    <h3> &nbsp;<b class="text-danger">Dr. {{ prescription.medicName }}</b></h3>
                                    <p class="text-muted m-l-5">{{ prescription.medicName.lastNaME }}
                                        <br> {{ prescription.medicName.firstName }},
                                        <br> Tel:{{ prescription.contact }},
                                        <br> {{ prescription.medicName.email}}</p>
                                </address>
                            </div>
                            <div class="pull-right text-right">
                                <address>
                                    <h3>To,</h3>
                                    <h4 class="font-bold">{{ prescription.patientName.firstName}}</h4>
                                    <p class="text-muted m-l-30">
                                        <br> {{ prescription.patientName.lastName}}
                                        <br> {{ prescription.patientName.username}},
                                        <br> {{ prescription.patientName.email}}</p>
                                    <p class="m-t-30"><b>Due Date :</b> <i class="fa fa-calendar"></i> {{ prescription.createdAt |date }}</p>
                                    {#                                <p><b>Due Date :</b> <i class="fa fa-calendar"></i> 25th Jan 2018</p>#}
                                </address>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="table-responsive m-t-40" style="clear: both;">
                                <table class="table table-hover">
                                    {#                            <table class="table">#}
                                    <tbody>

                                    <tr>
                                        <th>Age</th>
                                        <td>{{ prescription.age }}</td>
                                    </tr>
                                    <tr>
                                        <th>Contact</th>
                                        <td>{{ prescription.contact }}</td>
                                    </tr>
                                    <tr>
                                        <th>Diagnostic</th>
                                        <td>{{ prescription.diagnostic }}</td>
                                    </tr>
                                    <tr>
                                        <th>Blood_pressure</th>
                                        <td>{{ prescription.bloodPressure }}</td>
                                    </tr>
                                    <tr>
                                        <th>Pulse_rate</th>
                                        <td>{{ prescription.pulseRate }}</td>
                                    </tr>
                                    <tr>
                                        <th>Drug</th>
                                        <td>{{ prescription.drug |raw}}</td>
                                    </tr>


                                    <tr>
                                        <th>Examination</th>
                                        <td>{{ prescription.examination| raw}}</td>
                                    </tr>
                                    <tr>
                                        <th>Health_regine</th>
                                        <td>{{ prescription.healthRegine }}</td>
                                    </tr>
                                    </tbody>
                                </table>



                            </div>
                            <div class="col-md-12">

                                <div class="pull-right m-t-30 text-right">
                                    {#                                <p>Sub - Total amount: $13,848</p>#}
                                    {#                                <p>vat (10%) : $138 </p>#}<h2><b>Thanks </b></h2>
                                    <hr>
                                    <h3> Your health is Our Priority</h3>
                                </div>
                                <div class="clearfix"></div>
                                <hr>
                                <div class="text-right">
                                    <a href="{{ path('print_prescription',{'id': prescription.id}) }}">
                                        <button class="btn btn-success" type="submit">print </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
            {% else %}
                <!-- Search form -->
                <div class="container">
{#                    <div class="row">#}
                <form method="post">
                    <input class="form-control" type="text" placeholder="Search" aria-label="Search" name="id">
                    <input type="submit" class="btn btn-primary" value="search">
                </form>
{#                    </div>#}
                </div>
        {% endif %}
    </div>
{% endblock %}
